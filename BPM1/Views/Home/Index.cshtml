                                <span class="iconfont icon icon-left icon-shouye-shouye"></span>
                                <span class="big-title">首页</span>
                            </div>

                        </li>
                        @Html.Raw(ViewBag.menulist)
                    </ul>
                </div>
            </div>
            <!--右侧区域-->
            <div class="right-content-area">
                <div class="content-main-wrapper">
                    <div class="iframe-content">
