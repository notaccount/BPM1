    <style>
        .content-main-wrapper {
            top: 0;
        }

        .menue {
            top: 0;
        }

        .wrapper-body {
            position: absolute;
            top: 82px;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 10;
        }

        .extend {
            width: 10px;
            height: 70px;
            text-align: center;
            line-height: 70px;
            font-size: 12px;
            cursor: pointer;
            position: absolute;
            left: 220px;
            top: 50%;
            margin-top: -35px;
            color: #999999;
            opacity: 1;
            border: 1px solid #ccc;
            background: #F9F9F9;
            display: none;
            z-index: 1;
            border-radius: 0 10px 10px 0;
            transition: width .3s,font-size .3s;
        }

        .left-menu-area:hover .extend {
            display: block;
        }

        .left-menu-area .extend:hover {
            width: 20px;
            font-size: 16px;
            color: #51B6E4;
        }

        body {
            position: relative;
        }

        .head-right {
            height: 50px;
            line-height: 50px;
            position: absolute;
            right: 0;
            bottom: 2px;
            z-index: 2;
        }

        .content-head .head-left {
            width: 350px;
            height: 43px;
            background-image: url('/page/img/head-bg.png');
            display: inline-block;
            margin-top: 18px;
            position: relative;
            z-index: 1;
        }

        .head-left-text {
            display: inline-block;
            position: relative;
            z-index: 1;
            height: 80px;
            line-height: 80px;
            font-size: 18px;
            color: white;
            margin-left: 5px;
        }

        .left-menu-area .menue .head-list-title {
            height: 40px;
            line-height: 40px;
            color: #2279B8;
            background: #eee;
        }

        .head-list-title .icon-left {
            float: left;
            margin: 0 10px 0 24px;
            font-size: 17px;
        }

        .left-menu-area .menue .head-list-title:hover span {
            color: #2279B8;
            cursor: default;
        }

        .imgbox {
            display: inline-block;
            width: 35px;
            height: 35px;
            border-radius: 50%;
            overflow: hidden;
            background: #50B5E4;
            border: 1px solid #A0DBFF;
        }
    </style>
